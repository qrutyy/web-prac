    <header class="container-fluid pl-20 pr-20 bg-transparent">
      <div class="d-flex pt-3 gap-3 justify-content-end">
        <div class="pl-2 pr-2">
          <% unless session[:authorized] %>
          <script
            async
            src="https://telegram.org/js/telegram-widget.js?22"
            data-telegram-login="auth_qruty_bot"
            data-size="large"
            data-radius="10"
            data-auth-url="/auth/telegram/callback"
            data-request-access="write"
          ></script>

          <script type="text/javascript">
            function onTelegramAuth(user) {
              alert(
                "Logged in as " +
                  user.first_name +
                  " " +
                  user.last_name +
                  " (" +
                  user.id +
                  (user.username ? ", @" + user.username : "") +
                  ")"
              );
            }
          </script>

          <% end %>
        </div>
        <div class="pl-2 pr-2">
          <% unless session[:authorized] %>
          <script>
            function githubLogin() {
              const clientId = "Ov23li0asy7Sg041vJ2d";
              const redirectUri =
                "https://web-prac-fbka.onrender.com/auth/github/callback";

              const authUrl = `https://github.com/login/oauth/authorize?client_id=${clientId}&redirect_uri=${redirectUri}&scope=read:user,user:email`;

              window.location.href = authUrl;
            }
          </script>
          <style>
            .github-login-btn {
              width: 225px;
              height: 40px;
              border-radius: 10px;
              font-size: 16px;
              display: flex;
              align-items: center;
              justify-content: center;
              background-color: #343a40; /* Dark background */
              color: #fff; /* White text */
              border: none; /* Remove default button border */
              cursor: pointer;
            }
          </style>
          <button onclick="githubLogin()" class="github-login-btn">
            <i class="fab fa-github me-2"></i> Log in with GitHub
          </button>
          <% end %>
        </div>
        <div class="pt-2 pr-2">
          <div class="form-check form-switch justify-content-center">
            <% if session[:authorized] %> <%= form_with url: root_path, method:
            :get, local: true do %> <%= hidden_field_tag :locale, I18n.locale ==
            :en ? :ru : :en, id: "localeHiddenField" %> <input
            class="form-check-input" type="checkbox" role="switch"
            id="languageSwitch" <%= I18n.locale == :en ? 'checked' : '' %>
            onchange="this.form.submit();
            document.getElementById('localeHiddenField').value = this.checked ?
            'en' : 'ru';">
            <label class="form-check-label" for="languageSwitch">
              <%= 'RU/EN' %>
            </label>
            <% end %> <% else %>
            <p class="text-center">Authorize to change the language (RU/EN).</p>
            <% end %>
          </div>
        </div>
